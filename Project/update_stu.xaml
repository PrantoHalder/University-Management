        <TextBox x:Name="t2" HorizontalAlignment="Left" Height="30" Margin="108,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Background="#FF76E4E4"/>
        <Label x:Name="L1" Content="       Stanford University" HorizontalAlignment="Left" Margin="288,25,0,0" VerticalAlignment="Top" Height="40" Width="230" FontSize="16" FontWeight="Bold" FontStyle="Italic" Background="#191FD6F3"/>
        <Label Content="Department : " HorizontalAlignment="Left" Margin="27,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.605,1.907" FontSize="16" FontWeight="Bold"/>
