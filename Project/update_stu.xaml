        xmlns:local="clr-namespace:University_application"
        mc:Ignorable="d"
        Title="Update Student Information Center" Height="477" Width="800" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Topmost="True" WindowStartupLocation="CenterOwner">
