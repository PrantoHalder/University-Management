        <Button x:Name="b1" Content="Show" HorizontalAlignment="Left" Margin="217,125,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="Button_Click_1" Background="#FF27CF17" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="t6" HorizontalAlignment="Left" Height="30" Margin="550,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Background="#FF56E6E6" IsReadOnly="True" FontWeight="Bold"/>
        <Label Content="Gender : " HorizontalAlignment="Left" Margin="471,160,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.605,1.907" FontSize="16" FontWeight="Bold"/>
        <Label Content="Contact : " HorizontalAlignment="Left" Margin="471,215,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.605,1.907" FontSize="16" FontWeight="Bold"/>
        <Label Content="Passward : " HorizontalAlignment="Left" Margin="471,277,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.605,1.907" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="t11" HorizontalAlignment="Left" Height="30" Margin="579,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Background="#FF77F0F0"/>
        <TextBox x:Name="t10" HorizontalAlignment="Left" Height="30" Margin="550,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Background="#FF52E4E4"/>
        <Button x:Name="b2" Content="Update" HorizontalAlignment="Left" Margin="471,339,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Background="#FF6ED328" FontSize="16" FontWeight="Bold"/>
        <Label Content="Email : " HorizontalAlignment="Left" Margin="473,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.605,1.907" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="t12" HorizontalAlignment="Left" Height="30" Margin="550,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Background="#FF73ECEC"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="614,340,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3" Background="#FFEC5428" FontSize="16" FontWeight="Bold"/>
        <Label Content="          All right reserved  Stanford University ,Australia&#xA;" HorizontalAlignment="Left" Margin="180,383,0,0" VerticalAlignment="Top" Width="426" FontSize="16" FontWeight="Bold" FontStyle="Italic"/>

